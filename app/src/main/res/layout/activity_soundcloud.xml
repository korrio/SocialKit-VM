<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:mActivity=".SoundCloundActivity">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/songs_list"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="100"
        />

    <android.support.v7.widget.Toolbar
        android:id="@+id/player_toolbar"
        android:background="@color/material_drawer_primary_dark"
        android:visibility="gone"
        android:theme="@style/Base.ThemeOverlay.AppCompat.Dark.ActionBar"
        android:layout_height="@dimen/player_toolbar"
        android:layout_width="match_parent"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/selected_thumbnail"
                android:layout_width="@dimen/avatar_size"
                android:layout_height="@dimen/avatar_size"/>
            <RelativeLayout
                android:id="@+id/player_control"
                android:layout_alignParentRight="true"
                android:layout_width="@dimen/avatar_size"
                android:layout_height="@dimen/avatar_size"
                >
                <ImageView
                    android:background="@drawable/oval"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    />
                <ImageView
                    android:id="@+id/player_state"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
                <ProgressBar
                    android:id="@+id/player_progress"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
                </RelativeLayout>
            <TextView
                android:id="@+id/selected_title"
                android:text="@string/hello_world"
                android:layout_toRightOf="@id/selected_thumbnail"
                android:layout_toLeftOf="@id/player_control"
                android:paddingLeft="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            </RelativeLayout>
        </android.support.v7.widget.Toolbar>
</LinearLayout>
