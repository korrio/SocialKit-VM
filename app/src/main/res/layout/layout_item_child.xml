<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/paddingCell"
                android:gravity="center_vertical" >

    <ImageView
        android:layout_width="@dimen/profileSize"
        android:layout_height="@dimen/profileSize"
        android:id="@+id/picProfile"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp"
        android:layout_alignParentTop="true" />


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/picProfile"
        android:layout_toEndOf="@+id/picProfile">

        <TextView
            android:id="@+id/textUser"
            android:layout_marginLeft="@dimen/marginInCell"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Child"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@android:color/black"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/picProfile"
            android:layout_toEndOf="@+id/picProfile"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/bioUser"
            android:layout_marginLeft="@dimen/marginInCell"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Child"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="#252525"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/picProfile"
            android:layout_toEndOf="@+id/picProfile"
            android:textStyle="normal"
            android:textIsSelectable="false"/>
    </LinearLayout>


</RelativeLayout>