<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
android:layout_width="match_parent"
android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#fff">

        <Button
            android:id="@+id/btn_love"
            android:layout_width="70dp"
            android:layout_height="@dimen/height_size_button_content"
            android:textColor="@color/material_drawer_dark_hint_text"
            android:text="123"
            android:textStyle="bold"
            android:background="#fff"
            android:drawableLeft="@drawable/ic_heart_outline_grey"
            android:paddingLeft="12dp"
            android:textSize="18dp"/>

        <Button
            android:id="@+id/btn_comment"
            android:layout_width="70dp"
            android:layout_height="@dimen/height_size_button_content"
            android:text="321"
            android:drawableLeft="@drawable/ic_comment"
            android:textStyle="bold"
            android:textColor="@color/material_drawer_dark_hint_text"
            android:background="#fff"
            android:paddingLeft="6dp"
            android:textSize="18dp"/>

        <View android:layout_width="110dp"
              android:layout_height="@dimen/height_size_button_content"
              android:background="#fff"
              android:layout_weight="4"/>

        <com.inthecheesefactory.lib.fblike.widget.FBLikeView
            android:id="@+id/fbLikeView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="6dp"
            android:visibility="gone"/>


        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/facebook"
            android:layout_gravity="center"
            android:layout_marginRight="6dp"
            android:visibility="gone"/>
        <Button
            android:id="@+id/btn_share"
            android:layout_width="70dp"
            android:layout_height="@dimen/height_size_button_content"
            android:textColor="#252525"
            android:drawableLeft="@drawable/facebook"
            android:text="456"
            android:textStyle="bold"
            android:background="#fff"
            android:visibility="visible"
            android:textSize="18dp"/>
    </LinearLayout>
</LinearLayout>
