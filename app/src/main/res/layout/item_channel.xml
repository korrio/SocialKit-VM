<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    app:cardCornerRadius="2dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_size_layout_medium"
            android:paddingLeft="@dimen/padding_size_layout_medium"
            android:paddingRight="@dimen/padding_size_layout_medium"
            android:gravity="top">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/avatar"
                android:layout_marginRight="5dp"
                android:gravity="center" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:layout_marginRight="10dp"
                    android:textStyle="bold"
                    android:text="Your Cool Name"
                    android:textColor="#000000"
                    android:id="@+id/name" />
                <!--
                            <com.gc.materialdesign.views.ButtonRectangle
                                android:id="@+id/btn_f"
                                android:textSize="5sp"

                                android:background="#312783"
                                android:text="Follow"
                                android:layout_width="80dp"
                                android:layout_height="40dp"  />
                                -->
            </LinearLayout>

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="@dimen/size_text"
                app:border_width="2dp"
                app:border_color="#FF000000"
                android:id="@+id/status"
                android:background="@color/material_drawer_dark_hint_text" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:id="@+id/live_cover"
                android:src="@drawable/default_offline" />
        </LinearLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>
