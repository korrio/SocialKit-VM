        <activity
            android:name=".activity.YoutubeDragableActivity"
            android:label="Youtube"
            android:windowSoftInputMode="adjustResize|stateHidden" >
        </activity>
        <activity
            android:name=".activity.SearchYoutubeActivity"
            android:label="Search Youtube"
            android:theme="@style/AppTheme2"
            android:windowSoftInputMode="adjustResize|stateHidden" >
        </activity>
        <activity
            android:name=".activity.PhotoActivity"
            android:label="Photos"
            android:theme="@style/AppTheme2"
            android:windowSoftInputMode="adjustResize|stateHidden" >
        </activity>
        <activity
            android:name=".activity.TakePhotoActivity"
            android:label=""
